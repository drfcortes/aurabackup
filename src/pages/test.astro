---
// test.astro
const uid = "AURA-2025-062549208"; // o el UID que quieras probar

const res = await fetch(`https://qyx30mhh90.execute-api.us-east-2.amazonaws.com/v1/getAuraBlockByUID/${uid}`);
let block = null;

if (res.ok) {
    const data = await res.json();
    block = data?.Item ?? data;
}
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Test AuraBlock</title>
</head>
<body style="font-family: sans-serif; padding: 2rem;">
<h1>Test Block Viewer</h1>

{block ? (
        <pre style="background: #f0f0f0; padding: 1rem; border-radius: 8px;">
        {JSON.stringify(block, null, 2)}
      </pre>
) : (
        <p style="color: red;">‚ùå No se pudo obtener el bloque con UID {uid}</p>
)}
</body>
</html>
