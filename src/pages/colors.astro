---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main class="p-8 max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold text-aura-green mb-6">AURA Color Palette Viewer</h1>
        <p class="text-aura-deep mb-8">Visual guide to evaluate background/text contrasts and tone combinations.</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <!-- Generador visual -->
            {
                Object.entries({
                    green: '#636b3f',
                    deep: '#2b361c',
                    yellow: '#fefae3',
                    sepia: '#d4a369',
                    leather: '#b17036',
                    soft: '#f9f9f6',
                    beige: '#eceadf',
                    black: '#1a1a1a',
                    gray: '#5e5e5e',
                    white: '#ffffff',
                    olive: '#8b8f66',
                    cream: '#fbf9ee'
                }).map(([name, hex]) => (
                        <div class="rounded shadow border border-gray-300">
                            <div class="h-24 w-full" style={`background-color: ${hex}`}></div>
                            <div class="p-4 text-sm">
                                <strong class="block font-mono">aura-{name}</strong>
                                <span class="text-xs text-gray-600">{hex}</span>
                            </div>
                        </div>
                ))
            }
        </div>

        <h2 class="mt-12 mb-4 text-2xl text-aura-leather font-semibold">Contrast Test Blocks</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="p-6 rounded bg-aura-soft text-aura-deep">
                <h3 class="font-bold text-lg">soft + deep</h3>
                <p>Readable and clean for content sections.</p>
            </div>
            <div class="p-6 rounded bg-aura-yellow text-aura-green">
                <h3 class="font-bold text-lg">yellow + green</h3>
                <p>Good for light highlights with nature tones.</p>
            </div>
            <div class="p-6 rounded bg-aura-cream text-aura-black">
                <h3 class="font-bold text-lg">cream + black</h3>
                <p>High contrast, good for headers or landing blocks.</p>
            </div>
            <div class="p-6 rounded bg-aura-sepia text-aura-white">
                <h3 class="font-bold text-lg">sepia + white</h3>
                <p>Warm button or callout style.</p>
            </div>
            <div class="p-6 rounded bg-aura-black text-aura-cream">
                <h3 class="font-bold text-lg">black + cream</h3>
                <p>Dark mode inverse contrast.</p>
            </div>
        </div>
    </main>
</Layout>
