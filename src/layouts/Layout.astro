---
import "../styles/styles.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AURA Protocol</title>

    <!-- ✅ Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <!-- ✅ Open Graph Meta Tags -->
    <meta property="og:title" content="AURA Protocol" />
    <meta property="og:description" content="Transparent attribution for AI-generated content." />
    <meta property="og:image" content="/og-preview.jpg" />
    <meta property="og:url" content="https://aurablock.org" />
    <meta property="og:type" content="website" />

    <!-- ✅ Twitter Card (opcional pero recomendable) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AURA Protocol" />
    <meta name="twitter:description" content="Transparent attribution for AI-generated content." />
    <meta name="twitter:image" content="/og-preview.jpg" />
</head>
<body class="font-sans text-gray-800 bg-white">
<header class="bg-gray-100 border-b border-gray-300 px-6 py-4 flex items-center justify-between">
    <!-- Identidad / Logo -->
    <a href="/" class="flex items-center gap-3 group" aria-label="AURA Home">
        <!-- Usa tu PNG (recomendado). Si no tienes, cambia a /favicon.ico -->
        <img
                src="/logo1.png"
                srcset="/logo1.png 1x, /logo1@2x.png 2x"
                alt="AURA Logo"
                class="h-8 w-8 rounded-lg"
                loading="eager"
                decoding="async"
        />
        <span class="text-xl font-semibold text-gray-800 group-hover:text-blue-700 transition-colors">
      AURA
    </span>
    </a>

    <!-- Navegación -->
    <nav class="flex items-center gap-6 text-sm font-medium text-gray-700">
        <a href="/" class="hover:text-blue-600">Home</a>
        <a href="/vision" class="hover:text-blue-600">Vision</a>
        <a href="/block" class="hover:text-blue-600">Block</a>
        <a href="/collaborators" class="hover:text-blue-600">Collaborators</a>
    </nav>
</header>

<main class="min-h-screen px-4 py-6">
    <slot />
</main>

<footer class="border-t border-gray-200 text-xs text-center text-gray-500 py-4">
    © 2025 AURA Protocol. All rights reserved.
</footer>
</body>
</html>
