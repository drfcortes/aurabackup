---
import NavbarResponsive from '../components/NavbarResponsive.jsx';
import ToastContainer from '../components/ToastContainer.jsx'; // ðŸ”” NUEVO
import "../styles/styles.css";
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AURA Protocol</title>

    <!-- âœ… Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <!-- âœ… Open Graph -->
    <meta property="og:title" content="AURA Protocol" />
    <meta property="og:description" content="Transparent attribution for AI-generated content." />
    <meta property="og:image" content="/og-preview.jpg" />
    <meta property="og:url" content="https://aurablock.org" />
    <meta property="og:type" content="website" />

    <!-- âœ… Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AURA Protocol" />
    <meta name="twitter:description" content="Transparent attribution for AI-generated content." />
    <meta name="twitter:image" content="/og-preview.jpg" />
    <script>
        // Aplicar tema guardado antes de renderizar
        if (localStorage.getItem("theme") === "dark") {
            document.documentElement.classList.add("dark");
        }
    </script>

</head>

<body class="font-sans text-base text-[#2b361c] bg-[#fefae3]">
<!-- âœ… Header modernizado -->
<NavbarResponsive client:load />
<ToastContainer client:load />
<!-- âœ… Contenido principal -->
<main class="max-w-5xl mx-auto px-6 py-8">
    <slot />
</main>
</body>
</html>
