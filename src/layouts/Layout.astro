---
import "../styles/styles.css"; // Asegúrate de que el archivo exista en src/styles/
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AURA Protocol</title>

    <!-- ✅ Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <!-- ✅ Open Graph -->
    <meta property="og:title" content="AURA Protocol" />
    <meta property="og:description" content="Transparent attribution for AI-generated content." />
    <meta property="og:image" content="/og-preview.jpg" />
    <meta property="og:url" content="https://aurablock.org" />
    <meta property="og:type" content="website" />

    <!-- ✅ Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AURA Protocol" />
    <meta name="twitter:description" content="Transparent attribution for AI-generated content." />
    <meta name="twitter:image" content="/og-preview.jpg" />
</head>

<body class="font-sans text-base text-[#2b361c] bg-[#fefae3]">
<!-- ✅ Header modernizado -->
<header class="flex items-center justify-between px-6 py-4 border-b border-[#d4a369] bg-[#fefae3]">
    <a href="/" class="flex items-center space-x-4">
        <img src="/logo1.png" alt="AURA Logo" class="h-16 w-auto" />
        <span class="text-2xl font-bold tracking-wide text-[#636b3f]">AURA</span>
    </a>
    <nav class="hidden md:flex space-x-6 text-sm font-medium text-[#2b361c]">
        <a href="/" class="hover:text-[#b17036]">Home</a>
        <a href="/vision" class="hover:text-[#b17036]">Vision</a>
        <a href="/block" class="hover:text-[#b17036]">Block</a>
        <a href="/collaborators" class="hover:text-[#b17036]">Collaborators</a>
    </nav>
</header>

<!-- ✅ Contenido principal -->
<main class="min-h-screen px-4 sm:px-6 lg:px-8">
    <slot />
</main>
</body>
</html>
