---
import NavbarResponsive from '../components/NavbarResponsive.jsx';
import "../styles/styles.css";
---


<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AURA Protocol</title>

    <!-- ✅ Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <!-- ✅ Open Graph -->
    <meta property="og:title" content="AURA Protocol" />
    <meta property="og:description" content="Transparent attribution for AI-generated content." />
    <meta property="og:image" content="/og-preview.jpg" />
    <meta property="og:url" content="https://aurablock.org" />
    <meta property="og:type" content="website" />

    <!-- ✅ Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AURA Protocol" />
    <meta name="twitter:description" content="Transparent attribution for AI-generated content." />
    <meta name="twitter:image" content="/og-preview.jpg" />
</head>

<body class="font-sans text-base text-[#2b361c] bg-[#fefae3]">
<!-- ✅ Header modernizado -->
<NavbarResponsive client:load />

<!-- ✅ Contenido principal -->
<main class="max-w-5xl mx-auto px-6 py-8">
    <slot />
</main>
</body>
</html>
